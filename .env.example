# TMDB Configuration
TMDB_API_KEY=your_tmdb_api_key_here

# S3 Configuration (works with AWS S3, Cloudflare R2, etc.)
# Set S3_ENABLED=true to enable S3 uploads
S3_ENABLED=false

# For AWS S3
S3_ENDPOINT_URL=
S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1

# For Cloudflare R2 (example)
# S3_ENDPOINT_URL=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
# S3_BUCKET_NAME=your-bucket-name
# S3_ACCESS_KEY_ID=your-r2-access-key
# S3_SECRET_ACCESS_KEY=your-r2-secret-key
# S3_REGION=auto

# Optional: Custom path prefix in bucket
S3_PATH_PREFIX=wallpapers/

# Optional: Make uploaded files public (true/false)
S3_PUBLIC_READ=true